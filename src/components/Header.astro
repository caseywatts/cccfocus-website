---
const { origin } = Astro.url;
---

<header class="drop-shadow-md hover:drop-shadow-sm transition ease-in-out duration-500">
  <nav class="shadow bg-gradient-to-r from-purple-100 through-orange-100 to-purple-100">
    <div class="px-6 py-4 mx-auto lg:flex justify-between items-center space-x-6">
      <div class="flex items-center justify-between">
        <div>
          <a class="text-xl text-gray-800 lg:text-2xl hover:text-gray-700 h-card u-url u-uid" rel="me" href={origin}> Charm City Community Focus</a>
        </div>

        <!-- Mobile menu button -->
        <div class="flex lg:hidden">
          <button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="toggle menu" onclick="showHideMobileNavMenu()">
            <svg viewBox="0 0 24 24" height="24px" width="24px" class="fill-current">
              <path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile Menu open: "block", Menu closed: "hidden" -->
      <div id="mainNav" class="flex-grow justify-end items-center hidden lg:flex lg:space-x-10">
        <div class="flex flex-col lg:flex-row items-center space-x-0 lg:space-x-6 space-y-2 lg:space-y-0">
          <!-- <a class="text-gray-700 hover:text-indigo-500 text-center" href="/episodes">Episodes</a> -->
          <!-- <a class="text-gray-700 hover:text-indigo-500 text-center" href="/hosts">Hosts</a> -->
          <a class="text-gray-700 hover:text-indigo-500 text-center" href="#newsletter">Newsletter</a>
          <a class="text-gray-700 hover:text-indigo-500 text-center" href="#contact">Contact</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  function showHideMobileNavMenu() {
    var mainNav = document.getElementById("mainNav");
    if (mainNav.classList.contains("hidden")) {
      mainNav.classList.remove("hidden");
    } else {
      mainNav.classList.add("hidden");
    }
  }
</script>
