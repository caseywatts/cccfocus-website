---
import OuterLayout from "../layouts/OuterLayout.astro";
import SEOTags from "../components/SEOTags.svelte";
import { SITE_DESCRIPTION } from "../consts";

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<title slot="head">{title}</title>
<meta slot="head" name="title" content={title} />
<meta slot="head" name="description" content={description} />

<SEOTags title={title} description={description || SITE_DESCRIPTION} contentType="website" url={Astro.url.href} />

<OuterLayout>
  <div class="panel panel-main">
    <article class="prose mx-auto">
      <slot />
    </article>
  </div>
</OuterLayout>
