---
import MastodonFeed from "../components/MastodonFeed.svelte";
import OuterLayout from "../components/OuterLayout.astro";
import SEOTags from "../components/SEOTags.svelte";

const SITE_TITLE = "Charm City Community Focus Podcast";
const SITE_DESCRIPTION = "We’ve got a lot of great communities in Baltimore. Let’s spread the word about all the great things we’ve got going on!";
import SubscribeForm from "../components/SubscribeForm.astro";
---

<SEOTags title={SITE_TITLE} description={SITE_DESCRIPTION} contentType="website" url={Astro.url.href} />

<OuterLayout>
  <div class="panel panel-main">
    <h1 class="text-3xl mb-2">Charm City Community Focus | Podcast</h1>

    <div class="">
      <p>We’ve got a lot of great communities in Baltimore.</p>
      <p>Let’s spread the word about all the great things we’ve got going on!</p>
    </div>
  </div>

  <div id="newsletter" class="mt-24"></div>
  <SubscribeForm />

  <div id="updates" class="mt-24"></div>
  <MastodonFeed client:only="svelte" />

  <div id="contact" class="mt-24"></div>
  <div class="panel panel-main">
    <h2 class="text-2xl mb-2">Contact Us</h2>
    <p>Email us at `casey` at `cccfocus.org`</p>
  </div>
</OuterLayout>
